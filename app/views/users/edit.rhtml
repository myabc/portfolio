<h1>Editing user</h1>

<%= start_form_tag :action => 'edit', :id => @user %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'Save' %>
<%= end_form_tag %>
<%= button_to 'Destroy', { :action => 'destroy', :id => @user }, :confirm => 'Are you sure you want to destroy this user?' %>

<%= link_to 'Show', :action => 'show', :id => @user %> |
<%= link_to 'Back to list', :action => 'list' %>
