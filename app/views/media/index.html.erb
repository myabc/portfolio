<h1>Listing media</h1>

<table>
  <tr>
    <% for column in Medium.content_columns %>
    <th><%= column.human_name %></th>
    <% end %>
  </tr>

<% for medium in @media %>
  <tr>
    <% for column in Medium.content_columns %>
      <td><%=h medium.send(column.name) %></td>
    <% end %>

    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

