<h1>Listing media</h1>

<table>
  <tr>
  <% for column in Medium.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for medium in @media %>
  <tr>
  <% for column in Medium.content_columns %>
    <td><%=h medium.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => medium %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => medium %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => medium }, :post => true, :confirm => 'Are you sure you want to destroy this medium?' %>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @medium_pages.current.previous } if @medium_pages.current.previous %>
<%= link_to 'Next page', { :page => @medium_pages.current.next } if @medium_pages.current.next %> 

<br />

<%= link_to 'New medium', :action => 'new' %>
