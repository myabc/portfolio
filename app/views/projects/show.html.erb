<h2>Project: <%= @project.title %></h2>

<%= markdown(@project.description) %>

<ul><% @project.assets.each do |asset| %>
  <% if ( asset.filename.include? "png" ) || ( asset.filename.include? "jpeg" ) %>
    <%= link_to image_tag(asset.public_filename), asset.public_filename %>
  <% else %>
    <li><%= link_to asset.filename, asset.public_filename %></li>
  <% end %>
<% end %></ul>